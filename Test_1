    <script>
        // --- AUDIO SYSTEM (THE IMMORTAL) ---
        // Danh s√°ch c√°c link nh·∫°c d·ª± ph√≤ng (Fallbacks)
        const playlist = [
            "https://cdn.pixabay.com/download/audio/2022/05/27/audio_1808fbf07a.mp3?filename=romantic-wedding-piano-115553.mp3", // Link C≈© (Romantic Wedding) - ∆Øu ti√™n s·ªë 1
            "https://cdn.pixabay.com/download/audio/2022/03/15/audio_c8b9767f6b.mp3", // Link Piano Moment (Backup 1)
            "https://cdn.pixabay.com/download/audio/2022/11/22/audio_febc508520.mp3" // Link Romantic Piano (Backup 2)
        ];
        let currentSongIdx = 0;
        const audio = document.getElementById('bg-music');

        function loadMusic() {
            audio.src = playlist[currentSongIdx];
            audio.load();
        }
        
        // T·ª± ƒë·ªông chuy·ªÉn link n·∫øu l·ªói
        audio.onerror = function() {
            console.log("Link nh·∫°c l·ªói, ƒëang chuy·ªÉn link kh√°c...");
            currentSongIdx = (currentSongIdx + 1) % playlist.length;
            loadMusic();
        };

        // Kh·ªüi t·∫°o
        loadMusic();

        // --- AUDIO CONTEXT SFX ---
        const audioCtx = new (window.AudioContext || window.webkitAudioContext)();
        
        function playSound(type) {
            if (audioCtx.state === 'suspended') audioCtx.resume();
            const osc = audioCtx.createOscillator();
            const gain = audioCtx.createGain();
            osc.connect(gain);
            gain.connect(audioCtx.destination);
            const now = audioCtx.currentTime;
            
            if (type === 'hover') {
                osc.type = 'sine'; osc.frequency.setValueAtTime(400, now); osc.frequency.exponentialRampToValueAtTime(600, now + 0.1);
                gain.gain.setValueAtTime(0.05, now); gain.gain.exponentialRampToValueAtTime(0.001, now + 0.1);
                osc.start(now); osc.stop(now + 0.1);
            } else if (type === 'click') {
                osc.type = 'triangle'; osc.frequency.setValueAtTime(600, now); osc.frequency.exponentialRampToValueAtTime(300, now + 0.2);
                gain.gain.setValueAtTime(0.1, now); gain.gain.exponentialRampToValueAtTime(0.001, now + 0.2);
                osc.start(now); osc.stop(now + 0.2);
            } else if (type === 'win') {
                osc.type = 'sine'; osc.frequency.setValueAtTime(500, now); osc.frequency.setValueAtTime(800, now + 0.2);
                gain.gain.setValueAtTime(0.1, now); gain.gain.exponentialRampToValueAtTime(0.001, now + 0.5);
                osc.start(now); osc.stop(now + 0.5);
            }
        }

        document.querySelectorAll('button').forEach(btn => {
            btn.addEventListener('mouseenter', () => playSound('hover'));
            btn.addEventListener('click', () => playSound('click'));
        });

        // --- CUSTOM CURSOR ---
        const cursorDot = document.getElementById("cursor-dot");
        const cursorOutline = document.getElementById("cursor-dot-outline");

        window.addEventListener("mousemove", (e) => {
            const posX = e.clientX;
            const posY = e.clientY;
            cursorDot.style.left = `${posX}px`;
            cursorDot.style.top = `${posY}px`;
            cursorOutline.animate({ left: `${posX}px`, top: `${posY}px` }, { duration: 500, fill: "forwards" });
            if (Math.random() > 0.8) createSparkle(posX, posY);
        });

        function createSparkle(x, y) {
            const sparkle = document.createElement('div');
            sparkle.style.position = 'fixed';
            sparkle.style.left = x + 'px';
            sparkle.style.top = y + 'px';
            sparkle.style.width = Math.random() * 4 + 'px';
            sparkle.style.height = sparkle.style.width;
            sparkle.style.background = `hsl(${Math.random() * 360}, 100%, 80%)`;
            sparkle.style.borderRadius = '50%';
            sparkle.style.pointerEvents = 'none';
            sparkle.style.zIndex = '9998';
            document.body.appendChild(sparkle);
            const destX = (Math.random() - 0.5) * 50;
            const destY = (Math.random() - 0.5) * 50;
            sparkle.animate([{ transform: 'translate(0, 0) scale(1)', opacity: 1 }, { transform: `translate(${destX}px, ${destY}px) scale(0)`, opacity: 0 }], { duration: 1000, easing: 'ease-out' }).onfinish = () => sparkle.remove();
        }

        // --- THREE.JS UNIVERSE ---
        function initThreeJS() {
            const canvas = document.getElementById('bg-canvas');
            const scene = new THREE.Scene();
            const camera = new THREE.PerspectiveCamera(75, window.innerWidth / window.innerHeight, 0.1, 1000);
            const renderer = new THREE.WebGLRenderer({ canvas: canvas, alpha: true });
            renderer.setSize(window.innerWidth, window.innerHeight);
            renderer.setPixelRatio(window.devicePixelRatio);

            const starsGeo = new THREE.BufferGeometry();
            const starsCount = 2000;
            const posArray = new Float32Array(starsCount * 3);
            for(let i=0; i<starsCount*3; i++) posArray[i] = (Math.random()-0.5) * 150;
            starsGeo.setAttribute('position', new THREE.BufferAttribute(posArray, 3));
            const starsMat = new THREE.PointsMaterial({ size: 0.1, color: 0xffffff, transparent: true, opacity: 0.8 });
            const starMesh = new THREE.Points(starsGeo, starsMat);
            scene.add(starMesh);

            const heartShape = new THREE.Shape();
            const x = 0, y = 0;
            heartShape.moveTo( x + 5, y + 5 );
            heartShape.bezierCurveTo( x + 5, y + 5, x + 4, y, x, y );
            heartShape.bezierCurveTo( x - 6, y, x - 6, y + 7,x - 6, y + 7 );
            heartShape.bezierCurveTo( x - 6, y + 11, x - 3, y + 15.4, x + 5, y + 19 );
            heartShape.bezierCurveTo( x + 12, y + 15.4, x + 16, y + 11, x + 16, y + 7 );
            heartShape.bezierCurveTo( x + 16, y + 7, x + 16, y, x + 10, y );
            heartShape.bezierCurveTo( x + 7, y, x + 5, y + 5, x + 5, y + 5 );
            const heartGeo = new THREE.ShapeGeometry(heartShape);
            const heartMat = new THREE.MeshBasicMaterial({ color: 0xff7eb3, side: THREE.DoubleSide, transparent: true, opacity: 0.5 });
            
            const hearts = [];
            for(let i=0; i<30; i++) {
                const mesh = new THREE.Mesh(heartGeo, heartMat);
                mesh.position.set((Math.random()-0.5)*100, (Math.random()-0.5)*100, (Math.random()-0.5)*50 - 20);
                mesh.rotation.z = Math.PI;
                const s = Math.random() * 0.1 + 0.05;
                mesh.scale.set(s, s, s);
                scene.add(mesh);
                hearts.push({ mesh, speed: Math.random()*0.05 + 0.02 });
            }
            camera.position.z = 50;

            let mouseX = 0;
            let mouseY = 0;
            window.addEventListener('mousemove', e => {
                mouseX = (e.clientX / window.innerWidth - 0.5) * 2;
                mouseY = -(e.clientY / window.innerHeight - 0.5) * 2;
            });

            function animate() {
                requestAnimationFrame(animate);
                starMesh.rotation.y += 0.0005;
                starMesh.rotation.x += 0.0002;
                camera.position.x += (mouseX * 2 - camera.position.x) * 0.05;
                camera.position.y += (mouseY * 2 - camera.position.y) * 0.05;
                camera.lookAt(scene.position);
                hearts.forEach(h => {
                    h.mesh.position.y += h.speed;
                    if(h.mesh.position.y > 50) h.mesh.position.y = -50;
                    h.mesh.rotation.y += 0.01;
                });
                renderer.render(scene, camera);
            }
            animate();
            window.addEventListener('resize', () => {
                camera.aspect = window.innerWidth/window.innerHeight;
                camera.updateProjectionMatrix();
                renderer.setSize(window.innerWidth, window.innerHeight);
            });
        }
        initThreeJS();

        // --- LOGIC ---
        function changeStage(nextId) {
            const current = document.querySelector('.stage.active');
            const next = document.getElementById('stage-' + nextId);
            
            gsap.to(current, {
                opacity: 0,
                duration: 0.5,
                onComplete: () => {
                    current.classList.remove('active');
                    current.style.visibility = 'hidden';
                    next.classList.add('active');
                    gsap.fromTo(next, { opacity: 0 }, { opacity: 1, duration: 0.8 });
                }
            });
        }

        // STAGE 1
        function checkPass() {
            const val = document.getElementById('pass-input').value.toLowerCase().trim();
            if (val === 'toibikhung' || val === '') {
                playSound('win');
                toggleMusic(true); // Force play music on interaction
                changeStage(2);
                initTrap();
            } else {
                const input = document.getElementById('pass-input');
                input.style.borderColor = 'red';
                input.animate([{transform: 'translateX(0)'}, {transform: 'translateX(10px)'}, {transform: 'translateX(-10px)'}, {transform: 'translateX(0)'}], {duration: 300});
                Swal.fire({ icon: 'error', title: 'Sai g√≤iii!', text: 'G·ª£i √Ω: Bi·ªát danh anh hay g·ªçi em (toibikhung)', background: '#222', color: '#fff' });
            }
        }

        // STAGE 2
        function initTrap() {
            const btnNo = document.getElementById('btn-no');
            const btnYes = document.querySelector('.btn-yes');
            
            // Trick logic: N√∫t No visible ngay t·ª´ ƒë·∫ßu, nh∆∞ng di chu·ªôt v√†o l√† ch·∫°y
            const moveBtn = () => {
                const w = window.innerWidth - 100;
                const h = window.innerHeight - 50;
                const yesRect = btnYes.getBoundingClientRect();
                
                let newX, newY, overlap;
                do {
                    newX = Math.random() * w;
                    newY = Math.random() * h;
                    overlap = (newX > yesRect.left - 100 && newX < yesRect.right + 100 && 
                               newY > yesRect.top - 100 && newY < yesRect.bottom + 100);
                } while(overlap);

                btnNo.style.position = 'fixed'; // Switch to fixed to fly around
                btnNo.style.left = newX + 'px';
                btnNo.style.top = newY + 'px';
                playSound('hover');
            };
            
            btnNo.addEventListener('mouseenter', moveBtn);
            btnNo.addEventListener('touchstart', (e) => { e.preventDefault(); moveBtn(); });
        }

        function passTrap() {
            playSound('win');
            toggleMusic(true); 
            changeStage(3);
            playIntro();
        }

        // STAGE 3
        function playIntro() {
            const lines = [
                "Ch√†o c√¥ng ch√∫a...",
                "C·∫£m ∆°n em ƒë√£ ƒë·∫øn b√™n ƒë·ªùi anh",
                "Bi·∫øn th·∫ø gi·ªõi t·∫ª nh·∫°t n√†y th√†nh m√†u h·ªìng",
                "Anh c√≥ m·ªôt b√≠ m·∫≠t mu·ªën cho em xem..."
            ];
            const container = document.getElementById('stage-3');
            
            let tl = gsap.timeline({
                onComplete: () => {
                    changeStage(4);
                    initGallery();
                }
            });

            lines.forEach(line => {
                const p = document.createElement('h1');
                p.innerText = line;
                p.className = 'title-font';
                p.style.position = 'absolute';
                p.style.fontSize = '3rem';
                p.style.color = 'var(--primary)';
                p.style.opacity = 0;
                container.appendChild(p);
                
                tl.to(p, { opacity: 1, y: -20, duration: 1.5, ease: 'power2.out' })
                  .to(p, { opacity: 0, y: -40, duration: 1, delay: 1 });
            });
        }

        // STAGE 4: GALLERY
        const memories = [
            { img: 'https://picsum.photos/300/300?r=1', text: "L·∫ßn ƒë·∫ßu g·∫∑p g·ª°" },
            { img: 'https://picsum.photos/300/300?r=2', text: "N·ª• h√¥n ƒë·∫ßu" },
            { img: 'https://picsum.photos/300/300?r=3', text: "ƒêi ƒê√† L·∫°t" },
            { img: 'https://picsum.photos/300/300?r=4', text: "L√∫c em d·ªói" },
            { img: 'https://picsum.photos/300/300?r=5', text: "ƒÇn s·∫≠p qu√°n" },
            { img: 'https://picsum.photos/300/300?r=6', text: "M√£i b√™n nhau" }
        ];

        function initGallery() {
            const carousel = document.getElementById('carousel');
            const radius = 400;
            const total = memories.length;
            
            memories.forEach((m, i) => {
                const card = document.createElement('div');
                card.className = 'card';
                card.innerHTML = `<img src="${m.img}"><p>${m.text}</p>`;
                const angle = (i / total) * Math.PI * 2;
                card.style.transform = `rotateY(${angle}rad) translateZ(${radius}px)`;
                carousel.appendChild(card);
            });

            let currAngle = 0;
            let targetAngle = 0;
            let isDown = false;
            let startX = 0;
            const nextBtn = document.getElementById('btn-next-stage');

            function tick() {
                currAngle += (targetAngle - currAngle) * 0.05;
                carousel.style.transform = `translateZ(-${radius}px) rotateY(${currAngle}rad)`;
                if (Math.abs(currAngle) > 2 && nextBtn.style.opacity == 0) {
                    nextBtn.style.visibility = 'visible';
                    nextBtn.style.opacity = 1;
                }
                requestAnimationFrame(tick);
            }
            tick();

            window.addEventListener('mousedown', e => { isDown = true; startX = e.clientX; });
            window.addEventListener('touchstart', e => { isDown = true; startX = e.touches[0].clientX; });
            window.addEventListener('mouseup', () => isDown = false);
            window.addEventListener('touchend', () => isDown = false);
            window.addEventListener('mousemove', e => {
                if(!isDown) return;
                const delta = (e.clientX - startX) * 0.005;
                targetAngle += delta;
                startX = e.clientX;
            });
            window.addEventListener('touchmove', e => {
                if(!isDown) return;
                const delta = (e.touches[0].clientX - startX) * 0.005;
                targetAngle += delta;
                startX = e.touches[0].clientX;
            });
            window.addEventListener('wheel', e => { targetAngle -= e.deltaY * 0.002; });
        }

        function toBirthday() {
            playSound('win');
            changeStage(5);
            initBirthday();
        }

        // STAGE 5: BIRTHDAY
        function initBirthday() {
            const msg = "Ch√∫c m·ª´ng sinh nh·∫≠t em y√™u! üéÇ\nCh√∫c em tu·ªïi m·ªõi lu√¥n xinh ƒë·∫πp, h·∫°nh ph√∫c v√† b·ªõt b·∫Øt n·∫°t anh l·∫°i nh√©! Y√™u em <3";
            const el = document.getElementById('bday-text');
            let i = 0;
            function type() {
                if(i < msg.length) {
                    el.innerHTML += msg.charAt(i) === '\n' ? '<br>' : msg.charAt(i);
                    i++;
                    setTimeout(type, 50);
                }
            }
            type();

            const btnBlow = document.getElementById('btn-blow');
            const bar = document.getElementById('breath-bar');
            const flame = document.getElementById('flame');
            let power = 0;
            let timer;

            const blow = () => {
                timer = setInterval(() => {
                    power += 2;
                    bar.style.width = Math.min(power, 100) + '%';
                    flame.style.transform = `scale(${1 + power/100}) rotate(${Math.random()*10-5}deg)`;
                    if (power >= 100) {
                        clearInterval(timer);
                        flame.style.opacity = 0;
                        btnBlow.style.display = 'none';
                        playSound('win');
                        fireConfetti();
                        setTimeout(() => changeStage(6) || initQuiz(), 3000);
                    }
                }, 30);
            };
            const stop = () => {
                clearInterval(timer);
                power = 0;
                bar.style.width = '0%';
                flame.style.transform = 'scale(1)';
            };

            btnBlow.addEventListener('mousedown', blow);
            btnBlow.addEventListener('mouseup', stop);
            btnBlow.addEventListener('touchstart', (e) => { e.preventDefault(); blow(); });
            btnBlow.addEventListener('touchend', stop);
        }

        function fireConfetti() {
            const duration = 3000;
            const end = Date.now() + duration;
            (function frame() {
                confetti({ particleCount: 5, angle: 60, spread: 55, origin: { x: 0 } });
                confetti({ particleCount: 5, angle: 120, spread: 55, origin: { x: 1 } });
                if (Date.now() < end) requestAnimationFrame(frame);
            }());
        }

        // STAGE 6: QUIZ
        const questions = [
            { q: "M√≥n ƒÉn anh th√≠ch nh·∫•t khi ƒëi c√πng em?", a: ["L·∫©u", "N∆∞·ªõng", "Em (Ahihi)", "C∆°m b·ª•i"], c: 2 },
            { q: "N·∫øu gi·∫≠n nhau ai s·∫Ω l√†m h√≤a tr∆∞·ªõc?", a: ["Anh", "Em", "T√πy t√¢m tr·∫°ng", "Anh (V√¥ ƒëi·ªÅu ki·ªán)"], c: 3 },
            { q: "S·ªü th√≠ch chung l·ªõn nh·∫•t c·ªßa t·ª•i m√¨nh?", a: ["Ng·ªß", "ƒÇn u·ªëng", "ƒêi ch∆°i", "Ki·∫øm ti·ªÅn"], c: 1 }
        ];
        let qIdx = 0;

        function initQuiz() {
            renderQ();
        }

        function renderQ() {
            const box = document.getElementById('quiz-box');
            if (qIdx >= questions.length) {
                box.innerHTML = `<h2 style="color:var(--accent)">YOU ARE MY EVERYTHING! üíñ</h2><p>Anh y√™u em nhi·ªÅu l·∫Øm!</p>`;
                fireConfetti();
                return;
            }
            const q = questions[qIdx];
            box.innerHTML = `<p style="font-size:1.2rem; margin-bottom:20px">${q.q}</p>`;
            q.a.forEach((ans, i) => {
                const btn = document.createElement('button');
                btn.className = 'btn-primary';
                btn.style.width = '100%';
                btn.style.marginBottom = '10px';
                btn.innerText = ans;
                btn.onclick = () => checkAns(i, q.c);
                btn.onmouseenter = () => playSound('hover');
                box.appendChild(btn);
            });
        }

        function checkAns(idx, correct) {
            if (idx === correct) {
                playSound('win');
                Swal.fire({ icon: 'success', title: 'Chu·∫©n kh√¥ng c·∫ßn ch·ªânh!', timer: 1000, showConfirmButton: false });
                qIdx++;
                setTimeout(renderQ, 1000);
            } else {
                playSound('click');
                Swal.fire({ icon: 'error', title: 'Sai r√πi!', text: 'Nh∆∞ng anh v·∫´n y√™u em :v', timer: 1000, showConfirmButton: false });
            }
        }

        function toggleMusic(force) {
            const audio = document.getElementById('bg-music');
            const btn = document.querySelector('.music-control');
            if (force || audio.paused) {
                audio.play().catch(e => {
                    console.log("Autoplay prevented by browser. User interaction needed.");
                    // Pulse the button to draw attention
                    btn.style.animation = "spin 0.5s infinite";
                    setTimeout(() => btn.style.animation = "none", 2000);
                });
                btn.classList.add('playing');
            } else {
                audio.pause();
                btn.classList.remove('playing');
            }
        }
    </script>
</body>
</html>
